<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>webGilad</display-name>
  <welcome-file-list>
    <welcome-file>loginAndRegister.html</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <servlet>
    <description></description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
    <url-pattern>/LoginServlet/Login</url-pattern>
    <url-pattern>/LoginServlet/Register</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>listeners.DBListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>GetSessionUserNameServlet</display-name>
    <servlet-name>GetSessionUserNameServlet</servlet-name>
    <servlet-class>servlets.GetSessionUserNameServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetSessionUserNameServlet</servlet-name>
    <url-pattern>/GetSessionUserNameServlet</url-pattern>
    <url-pattern>/GetSessionUserNameServlet/GetNickName</url-pattern>
    <url-pattern>/GetSessionUserNameServlet/RemoveAtt</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>QuestionsServlet</display-name>
    <servlet-name>QuestionsServlet</servlet-name>
    <servlet-class>servlets.QuestionsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuestionsServlet</servlet-name>
    <url-pattern>/QuestionsServlet</url-pattern>
    <url-pattern>/QuestionsServlet/PostQuestion</url-pattern>
    <url-pattern>/QuestionsServlet/GetNewTop20</url-pattern>
    <url-pattern>/QuestionsServlet/GetTop20</url-pattern>
    <url-pattern>/QuestionsServlet/incQuestionAnswers</url-pattern>
    <url-pattern>/QuestionsServlet/addVote</url-pattern>
    <url-pattern>/QuestionsServlet/Update</url-pattern>
    <url-pattern>/QuestionsServlet/getQuestionsByTopic</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AnswersServlet</display-name>
    <servlet-name>AnswersServlet</servlet-name>
    <servlet-class>servlets.AnswersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AnswersServlet</servlet-name>
    <url-pattern>/AnswersServlet</url-pattern>
    <url-pattern>/AnswersServlet/PostAnswer</url-pattern>
    <url-pattern>/AnswersServlet/GetAnswers</url-pattern>
    <url-pattern>/AnswersServlet/addVote</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LeaderBoardServlet</display-name>
    <servlet-name>LeaderBoardServlet</servlet-name>
    <servlet-class>servlets.LeaderBoardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LeaderBoardServlet</servlet-name>
    <url-pattern>/LeaderBoardServlet/getUsers</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>UserProfileServlet</display-name>
    <servlet-name>UserProfileServlet</servlet-name>
    <servlet-class>servlets.UserProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserProfileServlet</servlet-name>
    <url-pattern>/UserProfileServlet</url-pattern>
    <url-pattern>/UserProfileServlet/getUserDetails</url-pattern>
    <url-pattern>/UserProfileServlet/last5Questions</url-pattern>
    <url-pattern>/UserProfileServlet/getExpertise</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>TopicsServlet</display-name>
    <servlet-name>TopicsServlet</servlet-name>
    <servlet-class>servlets.TopicsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TopicsServlet</servlet-name>
    <url-pattern>/TopicsServlet</url-pattern>
    <url-pattern>/TopicsServlet/calcPopularTopics</url-pattern>
    <url-pattern>/TopicsServlet/GetTopics</url-pattern>    
  </servlet-mapping>
</web-app>